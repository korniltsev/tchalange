<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Item"/>
    <style name="Item.Root">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="item_content">
        <item name="android:layout_below">@id/nick</item>
        <item name="android:layout_toRightOf">@id/avatar</item>
        <!--<item name="android:layout_marginTop">3dp</item>-->
    </style>
    <style name="item_content_with_margins" parent="item_content">
        <item name="android:layout_marginRight">@dimen/photo_view_right_margin</item>
    </style>
</resources>