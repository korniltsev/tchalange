<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:paddingLeft="56dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
        >



    <ru.korniltsev.telegram.core.views.AvatarView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/forward_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:size="@dimen/avatar_size"


            />

    <TextView
            android:id="@+id/forward_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/forward_avatar"
            android:layout_toRightOf="@id/forward_avatar"
            />
    <TextView
            android:id="@+id/forward_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/forward_nick"
            android:layout_alignBottom="@id/forward_nick"
            />
    <TextView
            android:id="@+id/forward_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/forward_avatar"
            android:layout_below="@id/forward_nick"
            />
